<script type="text/javascript">
function	pre_register(){
	var mobilePhoneNumber = $('#mobilePhoneNumber').val();
	var password = $('#password').val();
	if(password != $('#password_verify').val()){
		//error 
		console.log('密码不一致');
		return;
	}else if(mobilePhoneNumber=='' || password==''){
		console.log('有未填的选项');
		return;
	}

	$.post('/register',{
		mobilePhoneNumber : mobilePhoneNumber,
		password :password
	},
	function(data, status){
		console.log(data);
	});
};

function verify_mobile_phone_number(){
	alert('fadfa');
	$('#verify_form').submit();
};

</script>

